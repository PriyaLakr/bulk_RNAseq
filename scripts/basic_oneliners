# create a conda working ennviornment 

conda create -name RNAseq

conda activate RNAseq

# install dependencies with conda and/or pip

pip install multiqc
conda install -c bioconda fastqc
conda install -c bioconda trimmomatic
conda install -c bioconda star
conda install -c bioconda subread

#to see all tools in the conda enviornment and their versions
conda list 

conda deactivate 

